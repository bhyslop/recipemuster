# Recipe Bottle Nameplate - srjcl
# Jupyter Notebook environment with Claude API access

# Core Service Definition
RBRN_MONIKER=srjcl
RBRN_DESCRIPTION="Jupyter Notebook environment with Claude API access for AI-assisted development"
RBRN_RUNTIME=docker

# Vessel Source Configuration (GAR vessels)
RBRN_SENTRY_VESSEL=rbev-sentry-ubuntu-large
RBRN_BOTTLE_VESSEL=rbev-bottle-anthropic-jupyter
RBRN_SENTRY_CONSECRATION=
RBRN_BOTTLE_CONSECRATION=

# Port Service Configuration
RBRN_ENTRY_MODE=enabled
RBRN_ENTRY_PORT_WORKSTATION=7999
RBRN_ENTRY_PORT_ENCLAVE=8000

# Network Uplink Configuration
RBRN_UPLINK_PORT_MIN=10000
RBRN_UPLINK_DNS_MODE=allowlist
RBRN_UPLINK_ACCESS_MODE=allowlist
RBRN_UPLINK_ALLOWED_CIDRS=160.79.104.0/23
RBRN_UPLINK_ALLOWED_DOMAINS=anthropic.com

# Network Configuration
RBRN_ENCLAVE_BASE_IP=10.242.2.0
RBRN_ENCLAVE_NETMASK=24
RBRN_ENCLAVE_SENTRY_IP=10.242.2.2
RBRN_ENCLAVE_BOTTLE_IP=10.242.2.3

# Volume Mount Configuration
RBRN_VOLUME_MOUNTS=

# eof
